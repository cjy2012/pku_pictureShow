<!doctype html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=msg%></title>
    <link href="bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<style type="text/css">
    *{padding: 0;margin:0;}
    #main{
        position: relative;
    }
    .pin{
        padding: 5px 0 0 5px;
        float:left;
    }
    .box{
        padding: 2px;
        border:1px solid #ccc;
        box-shadow: 0 0 6px #ccc;
        border-radius: 5px;
    }
    .box img{
        width:162px;
        height:auto;
    }
</style>
<body>
<!--导航条-->
<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#"><%=msg%></a>
        </div>
    </div>
</nav>
<div class="container" style="padding: 10px;padding-left: 20px;padding-top: 5px;">
    <div class="row visible-on">
            <div id="main" >
                <% img.forEach(function(listPics){ %>
               <div class="pin">
                    <div class="box">
                        <img src="<%=listPics.imgpath%>"/>
                        <p class="imgName" align="center"><%=listPics.username%></p>
                    </div>
                </div>
                <%})%>
            </div>
    </div>
</div>
<script src="bower_components/jquery/dist/jquery.min.js"></script>
<script src="bower_components/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
<script type="text/javascript" src="js/waterfall.js"></script>
</body>
</html>
